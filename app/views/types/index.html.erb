<h1>All Element Types</h1>

<% if @types.empty? %>
    <p>There are no Pokemon Types</p>
<% else %>
    <div class="container">
        <div class="row">
            <% @types.each do |type| %>
                <div class="col-12 col-md-6 col-lg-4">
                    <h3><%= type.name %></h3>
                </div>
            <% end %>
        </div>

    </div>
<% end %>